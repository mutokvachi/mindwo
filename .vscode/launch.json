{
    "version": "0.2.0",
    "configurations": [     
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "ignore":[
                "**/vendor/**/*.php",
                "**/app/Packages/mindwo/pages/src/Helpers/pages.php"
            ]
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}